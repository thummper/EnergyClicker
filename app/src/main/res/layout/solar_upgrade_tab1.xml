<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aronb.energyclicker.SUTab1">

    <LinearLayout
        android:id="@+id/solarUpgradeMainData"
        android:layout_width="match_parent"
        android:layout_height="80sp"

        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="19dp">

        <TextView
            android:id="@+id/solarDayPower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="1sp"
            android:paddingTop="1sp"
            android:text="Daytime"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/solarNightPower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="1sp"
            android:paddingTop="1sp"
            android:text="Base Gen: 30 MWh"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/solarDayNight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="1sp"
            android:paddingTop="1sp"
            android:text="Current Gen: 60 MWh"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <ListView
        android:id="@+id/solarUpgradeListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_top_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/solarUpgradeMainData" />
</android.support.constraint.ConstraintLayout>
